@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container">
    <h1 class="mb-4">Admin Paneli</h1>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Toplam Araba</h5>
                    <h2 class="card-text">@ViewBag.ArabalarCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Satışta Olan</h5>
                    <h2 class="card-text">@ViewBag.SatilmamisCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Satılan</h5>
                    <h2 class="card-text">@ViewBag.SatilmisCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Kullanıcılar</h5>
                    <h2 class="card-text">@ViewBag.KullanicilarCount</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Arabalar" class="btn btn-primary btn-lg">Arabaları Yönet</a>
    </div>
</div>




