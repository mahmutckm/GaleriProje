@model List<ArabaGaleri.Models.Araba>
@{
    ViewData["Title"] = "Araba Yönetimi";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Araba Yönetimi</h1>
        <a asp-action="ArabaCreate" class="btn btn-success">Yeni Araba Ekle</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Resim</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Yıl</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var araba in Model)
                    {
                        <tr>
                            <td>@araba.Id</td>
                            <td>
                                @if (!string.IsNullOrEmpty(araba.ResimUrl))
                                {
                                    <img src="@araba.ResimUrl" alt="@araba.Marka @araba.Model" style="width: 60px; height: 60px; object-fit: cover;" class="rounded">
                                }
                                else
                                {
                                    <span class="text-muted">Yok</span>
                                }
                            </td>
                            <td>@araba.Marka</td>
                            <td>@araba.Model</td>
                            <td>@araba.Yil</td>
                            <td>@araba.Fiyat.ToString("C")</td>
                            <td>
                                @if (araba.SatildiMi)
                                {
                                    <span class="badge bg-warning">Satıldı</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Satışta</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ArabaEdit" asp-route-id="@araba.Id" class="btn btn-sm btn-primary">Düzenle</a>
                                <a asp-action="ArabaDelete" asp-route-id="@araba.Id" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>Henüz araba eklenmemiş.</p>
        </div>
    }
</div>




